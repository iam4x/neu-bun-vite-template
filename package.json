{
  "name": "neu-bun-vite-template",
  "version": "1.0.0",
  "description": "NeutralinoJS app with Bun extension and Vite hot-reloading",
  "type": "module",
  "scripts": {
    "dev": "./dev.sh",
    "build": "./build.sh",
    "lint": "bun run lint:eslint && bun run lint:tsc",
    "lint:eslint": "eslint frontend extensions/bun",
    "lint:tsc": "(cd frontend && tsc --noEmit) && (cd extensions/bun && tsc --noEmit)"
  },
  "devDependencies": {
    "@eslint/js": "^9.39.1",
    "@types/bun": "latest",
    "@typescript-eslint/parser": "^8.47.0",
    "eslint": "^9.39.1",
    "eslint-config-prettier": "10.1.1",
    "eslint-import-resolver-typescript": "4.3.1",
    "eslint-plugin-import": "^2.32.0",
    "eslint-plugin-prettier": "^5.5.4",
    "globals": "^16.5.0",
    "prettier": "^3.6.2",
    "typescript-eslint": "^8.47.0"
  },
  "engines": {
    "bun": ">=1.3.0"
  }
}
